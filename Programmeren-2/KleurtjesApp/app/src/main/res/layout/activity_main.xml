<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.roylenferink.kleurtjesapp.view.RGBTextView"
        android:id="@+id/rgbTextView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.roylenferink.kleurtjesapp.view.RGBRedView"
            android:id="@+id/redView"
            android:layout_weight="1" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.roylenferink.kleurtjesapp.view.RGBGreenView"
            android:id="@+id/greenView"
            android:layout_weight="1" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.roylenferink.kleurtjesapp.view.RGBBlueView"
            android:id="@+id/blueView"
            android:layout_weight="1" />

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.roylenferink.kleurtjesapp.view.RGBSeekbarView"
        android:id="@+id/rgbSeekbarView" />

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.roylenferink.kleurtjesapp.view.RGBColorView"
        android:id="@+id/rgbColorView" />

</LinearLayout>
